<?xml version="1.0" encoding="UTF-8"?>
<javaee:faces-config version="1.2"
	xmlns:javaee="http://java.sun.com/xml/ns/javaee" xmlns:xml="http://www.w3.org/XML/1998/namespace"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd ">

	<javaee:lifecycle>
		<javaee:phase-listener>
			com.sony.travelRequest.listener.RedirectPhaseListener</javaee:phase-listener>
	</javaee:lifecycle>

	<javaee:application>
		<javaee:variable-resolver>
			org.springframework.web.jsf.DelegatingVariableResolver</javaee:variable-resolver>
		<javaee:locale-config>
			<javaee:default-locale>en</javaee:default-locale>
		</javaee:locale-config>
		<javaee:resource-bundle>
			<javaee:base-name>resourceMessage</javaee:base-name>
			<javaee:var>message</javaee:var>
		</javaee:resource-bundle>
	</javaee:application>

	<javaee:validator>
		<javaee:validator-id>emailValidator</javaee:validator-id>
		<javaee:validator-class>
			com.sony.travelRequest.validator.EmailValidator</javaee:validator-class>
	</javaee:validator>

	<javaee:managed-bean>
		<javaee:managed-bean-name>travelProcessor</javaee:managed-bean-name>
		<javaee:managed-bean-class>
			com.sony.travelRequest.action.TravelProcessor</javaee:managed-bean-class>
		<javaee:managed-bean-scope>session</javaee:managed-bean-scope>
		<javaee:managed-property>
			<javaee:property-name>travelRequest</javaee:property-name>
			<javaee:property-class>com.sony.travelRequest.model.TravelRequest</javaee:property-class>
			<javaee:value>#{travelRequest}</javaee:value>
		</javaee:managed-property>
		<javaee:managed-property>
			<javaee:property-name>travelRequestDao</javaee:property-name>
			<javaee:value>#{travelRequestDao}</javaee:value>
		</javaee:managed-property>
		<javaee:managed-property>
			<javaee:property-name>emailComponent</javaee:property-name>
			<javaee:value>#{emailComponent}</javaee:value>
		</javaee:managed-property>
	</javaee:managed-bean>

	<javaee:managed-bean>
		<javaee:managed-bean-name>TableBean</javaee:managed-bean-name>
		<javaee:managed-bean-class>com.sony.travelRequest.test.TableBean</javaee:managed-bean-class>
		<javaee:managed-bean-scope>session</javaee:managed-bean-scope>
	</javaee:managed-bean>

	<javaee:managed-bean>
		<javaee:managed-bean-name>travelRequest</javaee:managed-bean-name>
		<javaee:managed-bean-class>com.sony.travelRequest.model.TravelRequest</javaee:managed-bean-class>
		<javaee:managed-bean-scope>session</javaee:managed-bean-scope>
	</javaee:managed-bean>

	<managed-bean>
		<managed-bean-name>navigationBean</managed-bean-name>
		<managed-bean-class>com.sony.travelRequest.listener.NavigationBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>reqId</property-name>
			<value>#{param.reqId}</value>
			<property-name>role</property-name>
			<value>#{param.role}</value>
		</managed-property>
	</managed-bean>

	<javaee:navigation-rule>
		<javaee:from-view-id>travelForm.jsp</javaee:from-view-id>
		<javaee:navigation-case>
			<javaee:from-outcome>result</javaee:from-outcome>
			<javaee:to-view-id>travelFormSum.jsp</javaee:to-view-id>
		</javaee:navigation-case>
		<javaee:navigation-case>
			<javaee:from-outcome>invalid</javaee:from-outcome>
			<javaee:to-view-id>travelForm.jsp</javaee:to-view-id>
		</javaee:navigation-case>
	</javaee:navigation-rule>

	<javaee:navigation-rule>
		<javaee:from-view-id>travelFormSum.jsp</javaee:from-view-id>
		<javaee:navigation-case>
			<javaee:from-outcome>travelSummary</javaee:from-outcome>
			<javaee:to-view-id>travelFormSum.jsp</javaee:to-view-id>
		</javaee:navigation-case>
	</javaee:navigation-rule>

</javaee:faces-config>
